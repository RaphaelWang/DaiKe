<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"

    android:background="#ffffff">


    <com.wyf.daike.Util.CircleImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/cardImage"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ly"
        app:border_width="2dp"
        app:border_color="@android:color/white"
        />

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="请帮忙带上语言课，谢帮忙带上语555555555555555555555555555555555言课！"
        android:id="@+id/cardTitle"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/cardImage"
        android:layout_toRightOf="@+id/cardImage"
        android:textSize="17sp" />

    <TextView
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:text="语文"
        android:id="@+id/cardSubject"
        android:textSize="14sp"
        android:layout_alignBottom="@+id/cardImage"
        android:layout_alignLeft="@+id/cardTitle"
        android:layout_alignStart="@+id/cardTitle" />

    <TextView
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:text="博学楼D399"
        android:id="@+id/cardClassroom"
        android:textSize="14sp"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/cardSubject"
        android:layout_toRightOf="@+id/cardSubject"
        android:layout_toEndOf="@+id/cardSubject" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6月4日"
        android:id="@+id/cardTime"
        android:layout_below="@+id/cardTitle"
        android:layout_alignRight="@+id/cardMoney"
        android:layout_alignEnd="@+id/cardMoney"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥20"
        android:id="@+id/cardMoney"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/holo_orange_light"

        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>